<!DOCTYPE html>
<html>
    <head>
        <title>Hello</title>
    </head>
<body>
    <div class="row">
  <!-- carousel -->
  <div class="col-md-6 m-auto">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/bg/bg7.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/img/bg/bg4.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/img/bg/bg5.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
    </div>
  </div>
  <!-- end carousel -->
  <!-- form -->
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <%- include('./partials/message'); %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="account">Account ID</label>
          <input
            type="number"
            id="account"
            name="account"
            class="form-control"
            placeholder="Enter Account ID/number"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="mailto:contact@treasurypayint.com"><span class="text-primary">Contact Us</span></a>
      </p>
    </div>
  </div>    
</div>

</body>
</html>